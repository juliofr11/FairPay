<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_sobre_nosotros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D5059"
    android:padding="20dp"
    tools:context=".ui.main.WalletFragment">

    <!-- ðŸ”¹ TÃ­tulo principal -->
    <TextView
        android:id="@+id/text_titulo_SobreNosotros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="Sobre nosotros"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ Logo debajo del tÃ­tulo -->
    <ImageView
        android:id="@+id/imageView_SobreNosotros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/logo128x128"
        app:layout_constraintTop_toBottomOf="@id/text_titulo_SobreNosotros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"/>

    <!-- ðŸ”¹ Frame con lista de contactos o agenda -->
    <FrameLayout
        android:id="@+id/SobreNosotros"
        android:layout_width="259dp"
        android:layout_height="152dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_SobreNosotros">

        <!-- Lista interna dentro del FrameLayout -->
        <ListView
            android:id="@+id/listView_sobrenosotros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white" />
    </FrameLayout>

    <!-- ðŸ”¹ Frame con informaciÃ³n de contacto -->
    <FrameLayout
        android:id="@+id/frame2_sobreNosotros"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#808080"
        app:layout_constraintTop_toBottomOf="@id/SobreNosotros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="customerhelp@fairpay.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </FrameLayout>

    <!-- ðŸ”¹ Texto de versiÃ³n de la app -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Version Alpha 0.0.1"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/frame2_sobreNosotros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>